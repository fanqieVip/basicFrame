<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:gravity="center"
        tools:text="100"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:gravity="center"
        tools:text="0kb/s"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="开始上传"
        app:layout_constraintTop_toBottomOf="@+id/tv_speed"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_cancel_upload"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_upload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn_upload"
        app:layout_constraintBottom_toBottomOf="@+id/btn_upload"
        android:text="取消上传"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/btn_upload"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_download"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="开始下载"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_cancel_download"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_download"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn_download"
        app:layout_constraintBottom_toBottomOf="@+id/btn_download"
        android:text="取消下载"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/btn_download"
        app:layout_constraintRight_toLeftOf="@+id/btn_cancel_limit"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_limit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn_download"
        app:layout_constraintBottom_toBottomOf="@+id/btn_download"
        android:text="1M负载限速"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/btn_cancel_download"
        app:layout_constraintRight_toLeftOf="@+id/btn_cancel_limit_restore"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_limit_restore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn_download"
        app:layout_constraintBottom_toBottomOf="@+id/btn_download"
        android:text="恢复全速"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@+id/btn_cancel_limit"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>